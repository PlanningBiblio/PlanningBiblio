{# absenceInfo/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block page %}
    <link rel="StyleSheet" href="{{ asset('vendor/emoji-lib/css/emoji.css') }}" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <style>
        .tableauFiches .emoji-menu-tabs td {
            padding: 0 0 10px 10px;
        }
    </style>

    <div id="content-admin">
        <h3>Messages d'information</h3>

        <div class="admin-div">
            {% if id %}
                <h4>Modifications des messages d'informations</h4>
            {% else %}
                <h4>Ajout d'une information</h4>
            {% endif %}

            <form id='form' method='POST' action='{{ asset('admin/info') }}' name='form' onsubmit='return verif_form("start=date1;end=date2;text");'>
                <input type="hidden" name="_token" value="{{ csrf_token('') }}"/>
                <input type='hidden' name='id' value='{{ id }}'/>

                <table class='tableauFiches'>
                <tr>
                    <td><label>Date de d√©but</label> </td>
                    <td>
                    <input type='text' name='start' value='{{ start }}' style='width:100%;' class='datepicker'/>
                    </td>
                </tr>

                <tr>
                    <td><label>Date de fin</label></td>
                    <td>
                    <input type='text' name='end' value='{{ end }}' style='width:100%;' class='datepicker'/>
                    </td>
                </tr>

                <tr>
                    <td><label>Texte</label></td>
                    <td>
                    <p class="emoji-picker-container">
                        <textarea name="text" rows="3" class="ui-widget-content ui-corner-all" data-emojiable="true" data-emoji-input="unicode">{{ text }}</textarea>
                    </p>
                    </td>
                </tr>

                <tr>
                    <td>&nbsp;</td>
                </tr>

                <tr>
                    <td colspan='2' style='text-align:center;'>
                    <a href='{{ asset('admin/info') }}' class='ui-button ui-button-type2' style='margin-left:30px;'>Annuler</a>
                    {% if id %}
                        <a href='javascript:deleteAdminInfo({{ id }});' class='ui-button ui-button-type3' style='margin-left:30px;' >Supprimer</a>
                    {% endif %}
                    <input type='submit' value='Valider' class='ui-button ui-button-type1' style='margin-left:30px;'/>
                    </td>
                </tr>
                </table>
            </form>
        </div>
    </div>

    <script type="text/JavaScript" src="{{ asset('vendor/emoji-lib/js/config.min.js') }}"></script>
    <script type="text/JavaScript" src="{{ asset('vendor/emoji-lib/js/util.min.js') }}"></script>
    <script type="text/JavaScript" src="{{ asset('vendor/emoji-lib/js/jquery.emojiarea.min.js') }}"></script>
    <script type="text/JavaScript" src="{{ asset('vendor/emoji-lib/js/emoji-picker.min.js') }}"></script>
    <script>
    window.EMOJI_ASSETS_PATH = "{{ asset('vendor/emoji-lib/img/') }}";
    </script>
    <script type="text/JavaScript" src="{{ asset('js/emoji.js') }}"></script>
{% endblock %}
