{# admin/model/index.html.twig #}

{% extends 'base.html.twig' %}

{% block page %}
<div id="content-admin">
  <h3>Modification du modèle</h3>

  <div class="admin-div">
    <form method='post' action='{{ asset("/model") }}' name='form'>
      <input type='hidden' name='id' value='{{ template.model_id }}' />
      <table class='tableauFiches' style='width:700px;'>
        <tr>
          <td style='width:150px;'>Nom du modèle :</td>
          <td style='width:550px;'>
            <input type='text' value='{{ template.nom }}' name='name' class='ui-corner-all ui-widget-content' />
          </td>
        </tr>

        <tr>
          <td colspan='2' style='text-align:center;'>
            <br/><input type='button' value='Annuler' onclick='history.go(-1);' class='ui-button ui-button-type2'/>
    &nbsp;&nbsp;&nbsp;
            <input type='submit' value='Valider' class='ui-button'/>
          </td>
        </tr>
      </table>
    </form>
  </div>
</div>
{% endblock %}
