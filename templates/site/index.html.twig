{# site/index.html.twig #}

{% extends 'base.html.twig' %}

{% block page %}

  <form name="form" action="#">
    <table style='margin:20px 0;'>
      <tr valign='top'>
        <td style='width:270px'>
          <h3 style='margin-top:0px;'>Liste des sites</h3>
        </td>
        <td>
          <input type="button" value="Ajouter" id="ajouter" onclick="location.href='{{asset('site/add')}}'" class='ui-button'/>
        </td>
      </tr>
    </table>
  </form>

  <table id='tableSites' class='CJDataTable' data-sort='[[1, "asc"],[2, "asc"]]'>
    <thead>
      <tr>
        <th class='dataTableNoSort'>&nbsp;</th>
        <th>Nom du site</th>
        <th>Mails</th>
      </tr>
    </thead>
    <tbody>
      {% for j in sites %}
        <tr>
          <td style='white-space:nowrap;'>
            <div class="icon-div">
              <a href='{{ asset("site/") }}{{ j.id }}'>
                <span class='pl-icon pl-icon-edit' title='Modifier' ></span>
              </a>
              &nbsp;
              <a href='#'>
                <span id='{{ j.id }}' class='pl-icon pl-icon-dropblack' title='Supprimer' onclick="confirmDel(this.id)"></span>
                <script>
                  function confirmDel(id){
                    if (window.confirm("Voulez-vous vraiment supprimer ce site ?")){
                      CSRFToken = $('#CSRFSession').val();
                      $.ajax({
                        url : '{{ asset("site") }}',
                        type : 'DELETE',
                        data : {id: id, CSRFToken: CSRFToken},
                        success: function(response){
                          if (response == "Ok"){
                            window.location.reload('/site');
                          }
                        },
                        error: function(){
                          CJInfo("Une erreur est survenue lors de la suppression","error")
                        }
                      });
                    }
                  }
                </script>
              </a>
            </div>
          </td>
          <td id='site_name_{{j.id}}'>{{j.nom}}</td>
          <td title='{{j.mails}}' size='100'>{{ j.mailsAffiches }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
