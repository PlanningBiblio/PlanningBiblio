{# menu.html.twig #}
  <nav id="mainMenu" class="navbar navbar-expand-lg">
     <div class="container-fluid">
      <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <div class="logo-thumbnail"></div>
      </button>
      <a class="navbar-brand collapse navbar-collapse" href="{{ asset('') }}">
        <div id="logo"></div>
      </a>

      <div class="collapse navbar-collapse text-end" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        {% for entry in menu_entries %}
          {% if menu_js[entry.key]["items"] %}
          <li class="nav-item dropdown menu_li">
            <a href="{{ asset(entry.url) }}" role="button" class="nav-link dropdown-toggle {% if menuIsActive(entry.url, app.request.uri) %} active {% endif %}"  {% if menuIsActive(entry.url, app.request.uri) %} aria-current="page" {% endif %}  data-bs-toggle="dropdown" aria-expanded="false">{{ entry.title|raw}}</a>
            <ul class="dropdown-menu">

              {% for item in menu_js[entry.key]["items"] %}
              <li><a class="dropdown-item {% if menuIsActive(item.url, app.request.uri) %} active {% endif %}" {% if menuIsActive(item.url, app.request.uri) %} aria-current="true" {% endif %} href="{{ asset(item.url) }}">{{ item.title|raw}}</a></li>
              {% endfor %} 
            </ul>
          </li>
          {% else %}
          <li class="nav-item menu_li">
            <a href="{{ asset(entry.url) }}" role="button" class="nav-link {% if menuIsActive(entry.url, app.request.uri) %} active {% endif %}" {% if menuIsActive(entry.url, app.request.uri) %} aria-current="page" {% endif %}>{{ entry.title|raw}}</a>
          </li>
          {% endif %}
        {% endfor %} 
      </ul>

      <div id="accountDiv">
        <div id="username">
          {{ user_firstname }} {{ user_surname }}
        </div>

        <div id="logoutIcon">
          <a href="{{ asset('logout') }}" title="Déconnexion">
            <span class="pl-icon pl-icon-logout"></span>
          </a>
        </div>
          
        <div id="myAccountDiv">
          {% if planninghebdo or ics_export %}
            <a href="{{ asset('myaccount') }}" class="myAccountLink">Mon Compte</a>
          {% elseif config('Auth-Mode') == 'SQL' %}
            <a href="{{ asset('agent/password') }}" class="myAccountLink">Changer de mot de passe</a>
          {% endif %}
        </div>
      </div>

      <div id="accountDivReverse">
        <ul colspan="2" style="text-align:right;" class="menu_ul navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item dropdown menu_li">
          {% if planninghebdo or ics_export %}
            <a href="{{ asset('myaccount') }}" class="nav-item">Mon Compte</a>
          {% elseif config('Auth-Mode') == 'SQL' %}
            <a href="{{ asset('agent/password') }}" class="myAccountLink">Changer de mot de passe</a>
          {% endif %}
          </li>
          <li class="nav-item dropdown menu_li">
            <a href="{{ asset('logout') }}">Déconnexion</a>
          </li>
        </ul>
      </div>
      
    </div>
    </div>
  </nav>
