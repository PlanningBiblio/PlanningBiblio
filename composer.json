{
    "name": "planningbiblio/planningbiblio",
    "description": "Planning Biblio",
    "authors": [
        {
            "name": "Jerome Combes",
            "email": "jerome@planningbiblio.fr"
        },
        {
            "name": "Alex Arnaud",
            "email": "alex.arnaud@biblibre.com"
        },
        {
            "name": "Matthias Meusburger",
            "email": "matthias.meusburger@biblibre.com"            
        },
        {
            "name": "Sarah Deborde",
            "email": "sarah.deborde@biblibre.com"
        }
    ],
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1 || ^8.2",
        "apereo/phpcas": "^1.3",
        "composer/composer": "^2.6",
        "composer/package-versions-deprecated": "1.11.99.4",
        "doctrine/annotations": "^1.0",
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.14",
        "johngrogg/ics-parser": "^3",
        "jumbojett/openid-connect-php": "^0.9.10",
        "league/commonmark": "^2.3",
        "league/oauth2-client": "*",
        "mashape/unirest-php": "*",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpmailer/phpmailer": "^6.8.0",
        "phpstan/phpdoc-parser": "^1.2",
        "symfony/asset": "*",
        "symfony/config": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/expression-language": "*",
        "symfony/flex": "*",
        "symfony/form": "*",
        "symfony/framework-bundle": "*",
        "symfony/html-sanitizer": "*",
        "symfony/http-foundation": "*",
        "symfony/lock": "*",
        "symfony/mime": "*",
        "symfony/monolog-bundle": "*",
        "symfony/panther": "^2.1",
        "symfony/process": "*",
        "symfony/property-access": "*",
        "symfony/property-info": "*",
        "symfony/proxy-manager-bridge": "*",
        "symfony/security-bundle": "*",
        "symfony/security-csrf": "*",
        "symfony/serializer": "*",
        "symfony/translation": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/web-link": "*",
        "symfony/yaml": "*",
        "twig/extra-bundle": "^3.4",
        "twig/markdown-extra": "^3.4"
    },
    "require-dev": {
        "dbrekelmans/bdi": "^1.4",
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "*",
        "symfony/css-selector": "*",
        "symfony/debug-bundle": "*",
        "symfony/maker-bundle": "*",
        "symfony/phpunit-bridge": "^8.0",
        "symfony/stopwatch": "*",
        "symfony/web-profiler-bundle": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests",
            "Planno\\": "src/Planno",
            "Model\\": "src/Entity"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "app:update-db" : "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
